#ifndef WALLEY_STRING_H
#define	WALLEY_STRING_H

#ifdef	__cplusplus
extern "C" {
#endif
    char* substr(char* input_str,int from_index,int to_index){
      if(from_index<0||to_index>strlen(input_str)){
	printf("Mistake occurred while calling function substr\nPlease Check\n");
      } else {
        int length=to_index-from_index;
        int i;
        char *output=malloc(length*sizeof(char));
        for(i=0; i<length; i++){
	  *(output+i)=*(input_str+from_index+i);
        }
        return output;
      }
    }



#ifdef	__cplusplus
}
#endif

#endif	/* WALLEY_STRING_H */

